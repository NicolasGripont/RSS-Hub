<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:id="@+id/LL_Fond"
    android:orientation="vertical">

    <TextView android:text="Title" android:id="@+id/information_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>

    <TextView android:text="Url" android:id="@+id/information_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>

    <TextView android:text="Date" android:id="@+id/information_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>

    <TextView android:text="Image" android:id="@+id/information_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>

</LinearLayout>